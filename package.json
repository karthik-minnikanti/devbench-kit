{
  "name": "devbench-desktop",
  "version": "1.0.0",
  "description": "DevBench Desktop Application",
  "homepage": "https://github.com/karthikminnikanti/devbench",
  "author": {
    "name": "Karthik Minnikanti",
    "email": "karthik@devbench.app"
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:icon": "node build/create-icon.js",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "build:dmg": "npm run build:icon && npm run build && electron-builder --mac dmg",
    "build:mas": "npm run build:icon && npm run build && electron-builder --mac mas",
    "build:win": "npm run build:icon && npm run build && electron-builder --win",
    "build:win:portable": "npm run build:icon && npm run build && electron-builder --win portable",
    "build:all": "npm run build:icon && npm run build && electron-builder --mac --win --linux",
    "build:mac": "npm run build:icon && npm run build && electron-builder --mac",
    "build:linux": "npm run build:icon && npm run build && electron-builder --linux",
    "notarize": "electron-builder --mac notarize",
    "preview": "vite preview"
  },
  "dependencies": {
    "@blocknote/core": "^0.45.0",
    "@blocknote/mantine": "^0.45.0",
    "@blocknote/react": "^0.45.0",
    "@excalidraw/excalidraw": "^0.18.0",
    "@kubernetes/client-node": "^1.4.0",
    "@monaco-editor/react": "^4.6.0",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@scrape-do/curl-parser": "^0.3.0",
    "@types/dockerode": "^3.3.47",
    "axios": "^1.6.2",
    "bufferutil": "^4.1.0",
    "cmdk": "^0.2.0",
    "diff": "^5.1.0",
    "dockerode": "^4.0.9",
    "electron-updater": "^6.1.7",
    "html-to-image": "^1.11.11",
    "js-yaml": "^4.1.0",
    "mermaid": "^10.6.1",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-git": "^3.22.0",
    "utf-8-validate": "^6.0.6",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/diff": "^5.0.9",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.5",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^32.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.29.0",
    "wait-on": "^7.2.0"
  }
}
